<!-- Validation failure messages -->
<% if @status.errors.any? %>
  <% @status.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Status #<%= @status.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_status/<%= @status.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for body -->
      <div class="form-group">
        <label for="body" class="control-label">
          Body
        </label>

        <input type="text" id="body" name="body" placeholder="Body" class="form-control" value="<%= @status.body %>">
      </div>

      
      

      <!-- Label and input for location -->
      <div class="form-group">
        <label for="location" class="control-label">
          Location
        </label>

        <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="<%= @status.location %>">
      </div>

      <button class="btn btn-warning">
        Update Status
      </button>
      or
      <a href="/statuses/<%= @status.id %>">Cancel</a>
    </form>
  </div>
</div>
